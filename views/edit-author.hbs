<h1> Edit: {{author.last_name}} </h1>

<section>
  <form action="/authors/edit/{{author.id}}" method="POST">
    <label for="first_name">First_Name</label>
    <input name='first_name' type='text' id='first_name' value='{{author.first_name}}'>

    <label for="last_name">last_name</label>
    <input name='last_name' type='text' id='last_name' value='{{author.last_name}}'>

    <label for="bio">Bio</label>
    <textarea rows='10' cols='30' name='bio' id='bio'>{{author.bio}}</textarea>

    <label for="portrait">Picture URL</label>
    <input name='portrait' type='url' id='portrait' value='{{author.portrait}}'>

    <input class='new' type="submit" value="Submit">
  </form>
</section>
